@model IEnumerable<IdentityRole>

    <a asp-controller="Role" asp-action="Create" class="btn btn-primary">Rol ekle</a>
    <hr>

    <table class="table table-sm table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Users</th>
                <th></th>
            </tr>
        </thead>
        @if(Model.Count()==0){
        <tr>
            <td colspan="4" class="text-center">Rol yok</td>
        </tr>
        }else{
        <tbody>
            @foreach(var role in Model)
            {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td asp-role-users="@role.Id"></td>
                <td style="width: 150px;">
                    <a asp-controller="Role" asp-action="Edit" asp-route-id="@role.Id"
                        class="btn btn-sm btn-primary">Edit</a>
                    <form asp-action="Delete" method="post" style="display: inline-block;"
                        onsubmit="return confirm('Emin misiniz?')">
                        <input type="hidden" name="id" value="@role.Id" />
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
            }
        </tbody>
        }
    </table>