@model List<Post>
    <div class="row">
        <div class="col-lg-8">
            <div class="bg-white p-4">
                <h1 class="h4 mb-4">Popular Posts</h1>
                @foreach (var post in Model)
                {
                <div class="card bg-transparent border-0 mb-3">
                    <div class="row">
                        <div class="col-4">
                            <img src="~/img/@post.Image" class="img-fluid rounded" alt="Image for @post.Title">
                        </div>
                        <div class="col-8">
                            <h5><a href="/post/details/@post.Url" class="btn-link fw-bold">@post.Title</a></h5>
                            <p>@post.Description</p>
                            <div class="tags">
                                @foreach (var tag in post.Tags)
                                {
                                <a href="/post/tag/@tag.Text"
                                    class="badge bg-@tag.Color bg-opacity-10 text-@tag.Color mb-2 fw-bold">
                                    @tag.Text
                                </a>
                                }
                            </div>
                        </div>
                    </div>
                    <hr class="my-3">
                </div>
                }
                <nav>
                    <ul class="pagination">
                        <li class="page-item"><a href="#" class="page-link">1</a></li>
                        <li class="page-item"><a href="#" class="page-link">2</a></li>
                        <li class="page-item"><a href="#" class="page-link">3</a></li>
                    </ul>
                </nav>
            </div>
        </div>
        <div class="col-lg-4">
            <vc:tags-menu></vc:tags-menu>
            <vc:new-posts></vc:new-posts>
        </div>
    </div>