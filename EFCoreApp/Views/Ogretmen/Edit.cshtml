@model Ogretmen

<h2>Öğretmen düzenle</h2>
<hr>
<div class="row">
    <div class="col-8">

        <form asp-controller="Ogretmen" asp-action="Edit" method="post">
            <div asp-validation-summary="All"></div>
            <input type="hidden" asp-for="OgretmenId" />
            <div class="mb-3">
                <label asp-for="Ad" class="form-label"></label>
                <input asp-for="Ad" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Soyad" class="form-label"></label>
                <input asp-for="Soyad" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Eposta" class="form-label"></label>
                <input asp-for="Eposta" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Telefon" class="form-label"></label>
                <input asp-for="Telefon" class="form-control" />
            </div>

            <button type="submit" class="btn btn-secondary">Kaydet</button>
        </form>
    </div>
    <div class="col-4">
        <h4>Kurslar</h4>
        <hr />
        <ul>
            @foreach (var item in @Model.Kurslar)
            {
            }
        </ul>
    </div>
</div>